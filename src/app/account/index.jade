h1 My Account
.form-container
  form(method='post')
    .form-group
      label(for='firstName') First name
      input#firstName.form-control(type='text', ng-model='vm.user.firstName', required='')
    .form-group
      label(for='lastName') Last name
      input#lastName.form-control(type='text', ng-model='vm.user.lastName', required='')
    .form-group
      label(for='username') Username
      input#username.form-control(type='text', ng-model='vm.user.username', required='')
    .form-group
      label(for='password') Password
      input#password.form-control(type='password', ng-model='vm.user.password')
    .form-group
      button.btn.btn-primary(ng-click='vm.saveUser()') Save
      button.btn.btn-danger(ng-click='vm.deleteUser()') Delete
